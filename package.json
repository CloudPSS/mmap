{
  "name": "@cloudpss/mmap",
  "version": "0.0.6",
  "description": "mmap n-api addon for node.js",
  "author": "OpportunityLiu <opportunity@live.in>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudpss/mmap.git"
  },
  "keywords": [
    "mmap",
    "n-api"
  ],
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=14.16"
  },
  "os": [
    "linux"
  ],
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "install": "node-gyp-build",
    "clean": "rimraf dist",
    "clean:gyp": "rimraf build prebuilds",
    "build": "pnpm clean && tsc",
    "build:gyp": "prebuildify --napi --strip",
    "build:gyp-cross": "prebuildify-cross --napi --strip",
    "watch": "pnpm clean && tsc --watch",
    "test": "NODE_OPTIONS=\"${NODE_OPTIONS:-} --experimental-vm-modules\" jest",
    "prepare": "husky || echo Failed to initialize husky",
    "format": "prettier --cache --cache-strategy content --ignore-path .gitignore --write .",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/ --cache-strategy content --ext .js,.ts ."
  },
  "prettier": "@cloudpss/prettier-config",
  "commitlint": {
    "extends": "@cloudpss"
  },
  "devDependencies": {
    "@cloudpss/commitlint-config": "^3.0.27",
    "@cloudpss/eslint-config": "^3.0.27",
    "@cloudpss/lint-staged-config": "^3.0.27",
    "@cloudpss/prettier-config": "^3.0.27",
    "@cloudpss/tsconfig": "^3.0.27",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prebuildify": "^6.0.1",
    "prebuildify-cross": "^5.1.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4"
  }
}
